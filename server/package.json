{
  "name": "server",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "init": "tsc --init",
    "start": "ts-node --esm src/cmd/main.ts",
    "watch": "ts-node-dev --esm src/cmd/main.ts",
    "build": "tsc",
    "clean": "rm -Rf ./dist",
    "up": "npm-check-updates -u && npm install && npm dedupe && npm audit fix",
    "test": "mocha"
  },
  "exports": {
    ".": {
      "types": "./dist/cmd/main.d.ts",
      "import": "./dist/cmd/main.js"
    },
    "./protocol": {
      "types": "./dist/lib/protocol.d.ts",
      "import": "./dist/lib/protocol.js"
    }
  },
  "types": "./dist/cmd/main.d.ts",
  "main": "./dist/cmd/main.js",
  "author": "Kaede Fujisaki",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/generic-pool": "^3.1.11",
    "@types/marked": "^5.0.2",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.5",
    "mocha": "^10.2.0",
    "npm-check-updates": "^16.14.12",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@expo/spawn-async": "^1.7.2",
    "@fastify/static": "^6.12.0",
    "@wordpress/escape-html": "^2.48.0",
    "axios": "^1.6.3",
    "dayjs": "^1.11.10",
    "exifr": "^7.1.3",
    "fastify": "^4.25.2",
    "file-type": "^18.7.0",
    "generic-pool": "^3.9.0",
    "handlebars": "^4.7.8",
    "marked": "^11.1.0",
    "node-cache": "^5.1.2",
    "pino": "^8.17.2",
    "ts-node": "^10.9.2",
    "ts-postgres": "^1.8.0",
    "typescript": "^5.3.3"
  }
}
