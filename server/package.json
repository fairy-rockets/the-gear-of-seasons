{
  "name": "server",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "init": "tsc --init",
    "start": "ts-node --esm src/cmd/main.ts",
    "watch": "ts-node-dev --esm src/cmd/main.ts",
    "build": "tsc",
    "clean": "rm -Rf ./dist",
    "up": "npm-check-updates -u && npm install && npm dedupe && npm audit fix",
    "test": "mocha"
  },
  "exports": {
    ".": {
      "types": "./dist/cmd/main.d.ts",
      "import": "./dist/cmd/main.js"
    },
    "./protocol": {
      "types": "./dist/lib/protocol.d.ts",
      "import": "./dist/lib/protocol.js"
    }
  },
  "types": "./dist/cmd/main.d.ts",
  "main": "./dist/cmd/main.js",
  "author": "Kaede Fujisaki",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/generic-pool": "^3.1.10",
    "@types/marked": "^4.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.33",
    "mocha": "^10.0.0",
    "npm-check-updates": "^12.5.11",
    "ts-node-dev": "^1.1.8"
  },
  "dependencies": {
    "@expo/spawn-async": "^1.6.0",
    "@fastify/static": "^5.0.2",
    "@wordpress/escape-html": "^2.8.0",
    "axios": "^0.27.2",
    "dayjs": "^1.11.2",
    "exifr": "^7.1.3",
    "fastify": "^3.29.0",
    "file-type": "^17.1.1",
    "generic-pool": "^3.8.2",
    "handlebars": "^4.7.7",
    "marked": "^4.0.15",
    "node-cache": "^5.1.2",
    "pino": "^7.11.0",
    "ts-node": "^10.7.0",
    "ts-postgres": "^1.2.1",
    "typescript": "^4.6.4"
  }
}
