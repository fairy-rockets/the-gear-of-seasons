{
  "name": "server",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "init": "tsc --init",
    "start": "ts-node --esm src/cmd/main.ts",
    "watch": "ts-node-dev --esm src/cmd/main.ts",
    "build": "tsc",
    "clean": "rm -Rf ./dist",
    "up": "npm-check-updates -u && npm install && npm dedupe && npm audit fix",
    "test": "mocha"
  },
  "exports": {
    ".": {
      "types": "./dist/cmd/main.d.ts",
      "import": "./dist/cmd/main.js"
    },
    "./protocol": {
      "types": "./dist/lib/protocol.d.ts",
      "import": "./dist/lib/protocol.js"
    }
  },
  "types": "./dist/cmd/main.d.ts",
  "main": "./dist/cmd/main.js",
  "author": "Kaede Fujisaki",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/generic-pool": "^3.1.11",
    "@types/marked": "^4.0.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "mocha": "^10.2.0",
    "npm-check-updates": "^16.6.2",
    "ts-node-dev": "^2.0.0"
  },
  "dependencies": {
    "@expo/spawn-async": "^1.7.0",
    "@fastify/static": "^6.6.0",
    "@wordpress/escape-html": "^2.23.0",
    "axios": "^1.2.2",
    "dayjs": "^1.11.7",
    "exifr": "^7.1.3",
    "fastify": "^4.11.0",
    "file-type": "^18.0.0",
    "generic-pool": "^3.9.0",
    "handlebars": "^4.7.7",
    "marked": "^4.2.5",
    "node-cache": "^5.1.2",
    "pino": "^8.8.0",
    "ts-node": "^10.9.1",
    "ts-postgres": "^1.3.0",
    "typescript": "^4.9.4"
  }
}
